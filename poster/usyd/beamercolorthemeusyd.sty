\ProvidesPackage{beamercolorthemeusyd}[USYD colour theme]
\mode<presentation>

%========================================================
% Color Definitions
%========================================================
\definecolor{usydred}   {RGB}{236, 95, 50}
\definecolor{usydblack} {RGB}{ 20, 20, 20}
\definecolor{usydwhite} {RGB}{255,255,255}
\definecolor{usydgrey}  {RGB}{241,241,241}

%========================================================
% Global Structure
%========================================================
\setbeamercolor{normal text}{fg=usydblack, bg=usydwhite}
\setbeamercolor{structure}  {fg=usydred}

%========================================================
% Title Elements
%========================================================
\setbeamercolor{title}      {fg=usydwhite, bg=usydred}
\setbeamercolor{subtitle}   {fg=usydblack}
\setbeamercolor{frametitle} {fg=usydred,   bg=usydwhite}

%========================================================
% Blocks
%========================================================
\setbeamercolor{block title}{fg=usydwhite, bg=usydred}
\setbeamercolor{block body} {fg=usydblack, bg=usydgrey}

%========================================================
% Navigation & Separators
%========================================================
\setbeamercolor{headline}{fg=usydwhite, bg=usydred}
\setbeamercolor{footline}{fg=usydblack, bg=usydwhite}

\setbeamercolor{upper separation line head}{bg=usydred}
\setbeamercolor{lower separation line head}{bg=usydred}
\setbeamercolor{upper separation line foot}{bg=usydred}
\setbeamercolor{lower separation line foot}{bg=usydred}

%========================================================
% Headline / Footline Specifics
%========================================================
\setbeamercolor{title in headline}    {fg=usydwhite, bg=usydred}
\setbeamercolor{author in headline}   {fg=usydwhite, bg=usydred}
\setbeamercolor{institute in headline}{fg=usydwhite, bg=usydred}

\setbeamercolor{logo in head/foot}    {fg=usydblack, bg=usydwhite}
\setbeamercolor{section in head/foot} {fg=usydwhite, bg=usydred}
\setbeamercolor{author in head/foot}  {fg=usydblack, bg=usydred}
\setbeamercolor{title in head/foot}   {fg=usydblack, bg=usydwhite}

\mode<all>